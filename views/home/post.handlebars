    <title>Blog Post - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/blog-post.css" rel="stylesheet">
    
    <link href="/css/blog-home.css" rel="stylesheet">
  </head>

  <body>
      <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{post.user.firstName}} {{post.user.lastName}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{generateTime date "MMMM Do YYYY"}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

        
<hr>
          <!-- Post Content -->
          <p class="lead">{{post.body}}</p>
      <hr>


            {{#if user}}

         {{#if post.allowComments}}
          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
              <form action="/admin/comments/{{post.id}}" method="post">
                <div class="form-group">
                  <textarea name="body" class="form-control" rows="3"></textarea>
  
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>


          {{else}}
          <br>
          <h2>Comments not allowed for this post</h2>
          <hr>
        {{/if}}
        {{else}}
        
        <h2>You need to login--------><a href="/login">Login Here</a></h2>
<br>
<hr>
{{/if}}




{{#each post.comments}}





          <!--! Single Comment -->
          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
              <h5 class="mt-0">{{user.firstName}}</h5>
              {{body}}
            </div>
          </div>
{{/each}}




